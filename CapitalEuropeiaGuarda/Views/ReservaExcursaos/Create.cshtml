@model CapitalEuropeiaGuarda.Models.ReservaExcursao

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Reservar excursão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataReserva" class="control-label"></label>
                <input asp-for="DataReserva" class="form-control" />
                <span asp-validation-for="DataReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumPessoas" class="control-label"></label>
                <input asp-for="NumPessoas" class="form-control" />
                <span asp-validation-for="NumPessoas" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cancelado" /> @Html.DisplayNameFor(model => model.Cancelado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataCancelar" class="control-label"></label>
                <input asp-for="DataCancelar" class="form-control" />
                <span asp-validation-for="DataCancelar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary btn-sm">Voltar a lista</a>
</div>

