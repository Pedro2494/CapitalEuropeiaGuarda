@model IEnumerable<CapitalEuropeiaGuarda.Models.ReservaExcursao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color:#CADAFF">
            <th>
                @Html.DisplayNameFor(model => model.DataReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumPessoas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCancelar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="background-color:#DFE9FF">
            <td>
                @Html.DisplayFor(modelItem => item.DataReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumPessoas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCancelar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservaExcursaoId" class="btn btn-primary btn-sm">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ReservaExcursaoId" class="btn btn-info btn-sm">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.ReservaExcursaoId" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
