@model IEnumerable<CapitalEuropeiaGuarda.Models.Local>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concelho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coordenadas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concelho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordenadas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.localID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.localID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.localID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
