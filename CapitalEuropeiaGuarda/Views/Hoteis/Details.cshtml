@model CapitalEuropeiaGuarda.Models.Hoteis

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Hoteis</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoCurta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoCurta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HotelUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotelUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
    </dl>
</div>
<div class="col-2">
    @if (Model.Photo != null)
    {
<img class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" />}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HoteisId" class="btn btn-info btn-sm">Editar</a> 
    <a asp-action="Index" class="btn btn-primary btn-sm">Voltar a lista</a>
</div>
