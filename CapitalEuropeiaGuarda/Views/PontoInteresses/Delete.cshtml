@model CapitalEuropeiaGuarda.Models.PontoInteresse

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>



<h3>Deseja eliminar este ponto de interesse?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoCurta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoCurta)
        </dd>
    </dl>

    <div class="row">
        <div class="column">
            @if (Model.Photo != null)
            {
                <img style="height: 300px; width:300px;" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" />
            }
        </div>

        <div class="col-1"></div>
        <div class="column">
            @if (Model.Photo2 != null)
            {
                <img style="height: 300px; width:300px;" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo2)" />
            }
        </div>
    </div>

    <br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="PontoInteresseId" />
        <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
        <a asp-action="Index" class="btn btn-primary btn-sm">Voltar à lista</a>
    </form>
</div>
