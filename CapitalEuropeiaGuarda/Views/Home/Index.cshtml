@{
    ViewData["Title"] = "Home Page";
}

<style>
    .row {
        display: flex;
        justify-content: center;
    }

    .jumbotron {
        background-image: url("images/Background.jpg" );
        background-repeat: no-repeat;
        background-size: cover;
    }
    .display-3 {
        font-weight: bold;
    }
    .lead {
        font-weight: bold;
    }
</style>



    <header class="jumbotron my-4">
        <h1 class="display-3" style="        color: white;
        text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;" >Stay in Guarda</h1>
        <p class="lead" style="        color: white;
        text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;">Uma nova forma de conhecer o interior!</p>
        <a href="#" class="btn btn-primary btn-lg">Começar!</a>
    </header>



    <div class="row text-center">

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="images/Guarda.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Guarda</h4>
                    <p class="card-text">
                        A Cidade Mais Alta de Portugal
                    </p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Descobrir mais!</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="images/Manteigas.jpg" alt="" >
                <div class="card-body">
                    <h4 class="card-title">Manteigas</h4>
                    <p class="card-text">
                        O Coração da Serra da Estrela
                    </p>
                </div>
                <div class="card-footer">
                    <a asp-action="Manteigas" class="btn btn-primary">Descobrir mais!</a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="images/Sabugal.jpg" alt="">
                <div class="card-body">
                    <h4 class="card-title">Sabugal</h4>
                    <p class="card-text">
                        Local de Património
                    </p>
                </div>
                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Descobrir mais!</a>
                </div>
            </div>
        </div>

    </div>
